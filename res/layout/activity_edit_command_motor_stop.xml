<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    			android:layout_height="fill_parent" tools:context=".activity.ActivityEditCommandMotor">
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/text_motor_port"
			android:id="@+id/text_motor_port"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"/>
	<Spinner
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/spinner_motor_port"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@+id/text_motor_port"
			android:layout_toEndOf="@+id/text_motor_port"
			android:entries="@array/motors"/>
	<Switch
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/switch_motor_lock"
			android:id="@+id/switch_motor_lock"
			android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
			android:layout_below="@+id/spinner_motor_port"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"/>
</RelativeLayout>